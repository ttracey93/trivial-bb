<div id="register-page">
<div class="row container">

  <div class="col s6">

    <div class="row">
       <div class="col s12 ">
         <div class="card profile-card">
           <div class="card-image">
             <span class="card-title"></span>
           </div>
           <div class="card-content">
             <div class="center-align"><h5>Join TriviaL today.</h5></div>
           </div>
           <div class="card-action">
            <form id="register-form">
             <ul>
               <li>
                 <div id="form-error-message" class="center-align">
                 </div>
               </li>
               <li>
                 <div class="input-field col s6">
                   <input id="hostname" type="text" class="validate" required>
                   <label><i class="fa fa-user"></i> Host Name</label>
                 </div>
                <div class="input-field col s6">
                  <input id="url" type="text" class="validate" required>
                  <label><i class="fa fa-link"></i> URL</label>
                </div>
              </li>

               <li>
                 <div class="input-field col s12">
                   <input id="email" type="email" class="validate" required>
                   <label><i class="fa fa-envelope-o"></i> Email</label>
                 </div>
               </li>
               <li>
                 <div class="input-field col s12">
                   <input id="password" type="password" class="validate" required>
                   <label><i class="fa fa-key"></i> Password</label>
                 </div>
               </li>
               <li>
                 <div class="input-field col s12">
                   <input id="confirm-password" type="password" class="validate" required>
                   <label><i class="fa fa-key"></i> Confirm Password</label>
                 </div>
               </li>
               <li>
                 <button id="register-btn" class="btn waves-effect waves-light" type="submit" name="action">
                   Sign Up
                 </button>
               </li>
               <li>
                <p>
                By clicking "Sign Up" you agree to TriviaL's Terms of Service for the country of your residency. Please also review our Privacy Policy.
                </p>
               </li>
             </ul>
             </form>
           </div>
         </div>
       </div>
    </div>

  </div>
  <div class="col s6">
</div>
</div>
